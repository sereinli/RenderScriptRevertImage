<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/image_original"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                />
            <ImageView
                android:id="@+id/image_normal_revert"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/image_original"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv_normal_revert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/image_render_script_revert"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/image_original"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv_rs_revert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除"
            />

        <Button
            android:id="@+id/btn_normal_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色反转"
            />

        <Button
            android:id="@+id/btn_render_script_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RenderScript颜色反转"
            />
    </LinearLayout>
</RelativeLayout>
